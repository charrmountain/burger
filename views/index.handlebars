<div id = "name"><h1>Burger Devour</h1></div>

<div class="uk-child-width-expand@s uk-text-center" uk-grid id = "container">

<div class="uk-card uk-card-default uk-card-small uk-card-body" id= "devoured">
    <h3 class="uk-card-title" id= "name">Ordered</h3>
   <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
    </ul>
</div>


<br><br>


<br><br>

<div class="uk-card uk-card-default uk-card-body"id="add">
    <h3 class="uk-card-title"id= "name">Order up!</h3>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger:</label>
        <input type="text" id="ca" name="burger_name">
    </div>

    <button type="submit">Add Burger</button>
</form>
</div>

<div class="uk-card uk-card-default uk-card-body uk-card-small"id="burgers">
    <h3 class="uk-card-title"id= "name">Devoured</h3>
<ul>
    {{#each burgers}}
    {{#if devoured}}
    {{> burgers/burger-block devoured=false}}
    {{/if}}
    {{/each}}
</ul>
</div>
</div>
</div>